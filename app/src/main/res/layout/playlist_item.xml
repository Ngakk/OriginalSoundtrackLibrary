<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/track_display"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="#B3AAC5"
    >

    <TextView
        android:id="@+id/track_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/track_play"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        tools:text="Track Name" />

    <TextView
        android:id="@+id/track_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/track_name"
        android:layout_toRightOf="@+id/track_play"
        android:layout_marginLeft="12dp"
        android:layout_centerVertical="true"
        android:textSize="10sp"
        tools:text="Track album" />

    <TextView
        android:id="@+id/track_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/track_album"
        android:layout_toRightOf="@+id/track_play"
        android:layout_marginLeft="12dp"
        android:layout_centerVertical="true"
        android:textSize="10sp"
        tools:text="Track artist" />

    <ImageView
        android:id="@+id/track_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:background="#22333B"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageView
        android:id="@+id/track_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp" />

    <ImageView
        android:id="@+id/track_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:layout_toLeftOf="@+id/track_favorite"
        app:srcCompat="@android:drawable/stat_sys_download" />


</RelativeLayout>
